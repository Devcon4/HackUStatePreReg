extends layout
title=hackUState
block content
  .bg-overlay
    body#body(onresize='resizeCanvas()')
    canvas#MainCanvas
    script.
      var canvasName = "MainCanvas";
      var backgroundColor = "#3A3A3A";
      var lineColor = "#333333";
      var planeColor = "#000000";
      var pointColor = "#000000";
      var planesActive = false;
      var linesActive = true;
      var pointsActive = false;
      var lineDistance = 250; // keep less than 250-ish for framerate.
      var ObjectCount = 75; // keep less than 150-ish for framerate.
      
    style.
      #body {
      overflow: hidden;
      }
      #MainCanvas {
      border: 1px solid #000000;
      position: absolute;
      margin: 0;
      top: 0;
      left: 0;
      }
      
    script(src='/Points.js')
    //script(src='/EngineCore.js')
    //script(src='/Main.js')
  .content(id='#skrollr-body')
    section#main.montserrat
      .ui.page.grid
        .row
          .center.aligned.column
            .content
              img.logo(src='/images/logos/HackUStateLogo-5-02.png', onerror='this.onerror=null; this.src=/core/static/assets/images/hack-logo-white.png')
              |   
              .title
              .tagline
               | A hackathon in the mountains.
              |                          
              .description
                | 32 hours
              .date
                br
                | fall 2015 &nbsp;
              .location
                | USU Conference center
              | 
              br
              br
              |             
              button.montserrat.green.outline.button(onclick="") Register

    section#sponsor
      .sponsor-title
        | SPONSORS
        .silver.tier               
                       
    section#footer.lato
      .content
        | Built with 
        a(href='http://youtu.be/yPar4PvRWAY', style='text-decoration: none')
          i.ui.red.heart.icon
        |  by the hackUSU team 2015.
      br
      a.social(href='mailto:team@hackusu.org')
        i.ui.icon.mail
      |     
      a.social(href='https://twitter.com/hackusu')
        i.ui.icon.twitter
      |     
      a.social(href='https://www.facebook.com/HackUSU')
        i.ui.icon.facebook
    script(src='mychart.js')
